<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="contained-fluid">
    <!-- Brand name, which is always shown whatever the screen size. -->
    <a href="<%- url_for() %>" class="navbar-brand"><b><%- config.title %></b></a>

    <!-- This part is shown on mobile screen. -->
    <div class="navbar-header">
      <!-- Data target should be accorded with the id of collapse div part -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#my-navbar-collapse" aria-controls="my-navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
    </div>

    <!-- This format is shown on desktop/laptop screen. -->
    <div class="collapse navbar-collapse" id="my-navbar-collapse">
      <!-- Decide to pull the links to the right. -->
      <ul class="nav navbar-nav navbar-right">
        <% for(name in theme.menu) { %>
         <li <% if (url_for(theme.menu[name]) == url_for(page.path).replace('index.html', '')) { %> class="active" <% } %>>
            <a href="<%- url_for(theme.menu[name]) %>"><%- name %></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<!-- Because the navigation bar is fixed at the top, we need 3 new lines to avoid the contents below being blocked by it. -->
<br><br><br><br>
